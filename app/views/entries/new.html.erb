<h1 class="mb-4">New Entry for <%= @place.name %></h1>

<%= form_with(model: [@place, @entry], local: true) do |form| %>
  <% if @entry.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>
      <ul>
        <% @entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>
  
  <div class="mb-3">
    <%= form.label :occurred_on, class: "form-label" %>
    <%= form.date_field :occurred_on, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  
  <%= form.hidden_field :place_id, value: @place.id %>
  
  <div class="mb-3">
    <%= form.submit "Create Entry", class: "btn btn-primary" %>
    <%= link_to "Cancel", place_path(@place), class: "btn btn-secondary ms-2" %>
  </div>
<% end %>